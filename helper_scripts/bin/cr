#!/usr/bin/env -S uv run --no-project --with typer python
# vim: filetype=python
"""
Please refer to `deploy_apps/firecrawl.sh` to know how to start firecrawl.
"""
import typer
from firecrawl import FirecrawlApp

app = typer.Typer()

@app.command()
def scrape(url: str):
    """Scrape a URL using FirecrawlApp."""
    firecrawl_app = FirecrawlApp(api_key="fc-YOUR_API_KEY", api_url="http://localhost:3002")
    scrape_result = firecrawl_app.scrape_url(url, params={'formats': ['markdown']})
    print(scrape_result["markdown"])

if __name__ == "__main__":
    app()
