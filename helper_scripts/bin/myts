#!/bin/bash
# echo all arguments into script -c directly without tmp file, preserving spaces
if [ $# -eq 0 ]; then
    echo "Usage: $0 <command> [args...]"
    exit 1
fi

LOG_FILE=${LOG_FILE:-typescript}
# FIXED: properly handle arguments with quotes and spaces
script -c "$(printf '%q ' "$@")" $LOG_FILE

