#!/usr/bin/env python
"""
This is for hacking the vimtex on WLS to be able to open pdf directly.
"""
# print("cv.pdf")
import os
import sys
path = sys.argv[-1]

cur_path = os.getcwd()

# Get relative_path from `path` to `cur_path`
relative_path = os.path.relpath(path, cur_path)
print(relative_path)

